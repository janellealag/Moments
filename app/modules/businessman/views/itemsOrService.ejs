    <!--==========================
  modal for view item
============================-->  
<div class="modal fade" id="viewItem" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
			<h3 class="modal-title" id="lineModalLabel">YOUR ITEM</h3>
		</div>
		<div class="modal-body">
			<form>
              <div class="form-group">
				
				<label for="ItemName">Item Name</label>
                <input type="text" class="form-control" id="ItemName" placeholder="" readonly>
				<br>
				<label for="ItemPrice">Item Price</label>
                <input type="number" class="form-control" id="ItemPrice" placeholder="" min=1 readonly>
				<br>
				<label for="Description">Item Description</label>
                <textarea  style=" resize: none;" class="form-control" id="Description" placeholder="What's the specification/condition of your item?" readonly></textarea>
				<br>
				<label for="">Refund Percentage</label>
  
				
				<script>
				function updateSlider(slideAmount) {
				var sliderDiv = document.getElementById("sliderAmount");
				sliderDiv.innerHTML = slideAmount+"% will be refunded by the event organizers if their reservation is cancelled.";
				}
				</script>
				<input id="slide" type="range" min="1" max="100" step="1" value="75" onchange="updateSlider(this.value)" readonly>
				<div id="sliderAmount" ></div>​
				<br>
				
				<label for="">Available Day</label>
				<br>
				<div align="center">
                <input type="checkbox" name="Monday" readonly>Mon &nbsp;&nbsp;
				<input type="checkbox" name="Tuesday" readonly>Tue &nbsp;&nbsp;
				<input type="checkbox" name="Wednesday" readonly>Wed &nbsp;&nbsp;
				<input type="checkbox" name="Thursday" readonly>Thu &nbsp;&nbsp;
				<input type="checkbox" name="Friday" readonly>Fri &nbsp;&nbsp;
				<input type="checkbox" name="Saturday" readonly>Sat &nbsp;&nbsp;
				<input type="checkbox" name="Sunday" readonly>Sun &nbsp;&nbsp;
				</div><br>
				<br>
				<label for="">Available Time</label>
				<br>
				<table align="center">
				<tr>
				<td>
				Start Time
                <input type="time" class="form-control" id="startTime" placeholder=""	width="10" readonly> 
				<td>
				End Time
				<input type="time" class="form-control" id="endTime" placeholder="" readonly>
				</tr>
				</table>
				<br>
				<label for="Quantity">Quantity</label>
                <input type="number" class="form-control" id="quantity" readonly>
				<br>

              <button type="submit" class="btn btn-services"  >Okay</button>
				<button type="submit" class="btn btn-services" data-dismiss="modal" data-toggle="modal" data-target="#editItem" >Edit</button>
            </form>
		</div>
	</div>
  </div>
</div>
</div>
